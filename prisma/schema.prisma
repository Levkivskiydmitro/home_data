generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Post {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  likes       Int      @default(0)
  tags        PostTag[]
}

model Tag {
  id    Int      @id @default(autoincrement())
  name  String   @unique
  posts PostTag[]
}

model PostTag {
  id     Int   @id @default(autoincrement())
  post   Post  @relation(fields: [postId], references: [id])
  postId Int
  tag    Tag   @relation(fields: [tagId], references: [id])
  tagId  Int

  @@unique([postId, tagId])
}
